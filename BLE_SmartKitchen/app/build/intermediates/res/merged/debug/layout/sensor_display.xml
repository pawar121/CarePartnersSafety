<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="338dp"
            android:orientation="vertical"
            android:focusableInTouchMode="true">

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="10dp"
              android:visibility="invisible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:text="Battery Update Time:"
                        android:textSize="20dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        />

                  <EditText
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="680dp"
                      android:gravity="right"
                      android:layout_marginTop="10dp"
                      android:textSize="20dp"
                      android:background="@drawable/layout_bg_button"
                      android:text="1 min"
                      android:textColorHint="@color/abc_primary_text_disable_only_material_light"
                      android:autoText="true"
                      android:textIsSelectable="false" />




          </LinearLayout>


          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="5dp"
                  android:layout_marginLeft="43dp"
                  android:text="Set battery lower level value(in %):"
                  android:textSize="20dp"
                  android:textColor="#000000"
                  android:textStyle="bold"
                  />

                <EditText
                    android:layout_width = "50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="559dp"
                    android:layout_marginTop="5dp"
                    android:gravity="right"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:background="@drawable/edittextstyle"
                    style="@style/editTextClassic"
                    android:hint="40"
                    android:textColorHint="@color/abc_input_method_navigation_guard"
                    android:id="@+id/minBattery"
                    android:inputType="number" />
          </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="43dp"
                    android:text="Set battery middle level value(in %):"
                    android:textSize="20dp"
                    android:textColor="#000000"
                    android:textStyle="bold"/>

                <EditText
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="547dp"
                    style="@style/editTextClassic"
                    android:textAlignment="center"
                    android:background="@drawable/edittextstyle"
                    android:gravity="right"
                    android:layout_marginTop="5dp"
                    android:id="@+id/maxBattery"
                    android:textSize="20dp"
                    android:hint="70"
                    android:textColorHint="@color/abc_primary_text_material_light"
                    android:inputType="number" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:text="Set Sensor Update Time:"
                    android:textSize="20dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_marginLeft="650dp"
                    android:layout_marginTop="10dp"
                    android:textSize="20dp"
                    android:background="#D3D3D3"
                    android:text=" 2 min"
                    android:textColorHint="@color/abc_primary_text_material_light" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="43dp"
                    android:text="Set sensor strength minimum value:"
                    android:textSize="20dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    />

                <EditText
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="547dp"
                    style="@style/editTextClassic"
                    android:layout_marginTop="5dp"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:background="@drawable/edittextstyle"
                    android:id="@+id/minStrength"
                    android:gravity="right"
                    android:hint="60"
                    android:textColorHint="@color/abc_primary_text_material_light"
                    android:inputType="number" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="43dp"
                    android:text="Set sensor strength maximum value:"
                    android:textSize="20dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    />

                <EditText
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="542dp"
                    android:gravity="right"
                    style="@style/editTextClassic"
                    android:id="@+id/maxStrength"
                    android:layout_marginTop="5dp"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:background="@drawable/edittextstyle"
                    android:textColorHint="@color/abc_primary_text_material_light"
                    android:hint="30"
                    android:inputType="number"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="43dp"
                    android:text="Set stove current maximum value:"
                    android:textSize="20dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    />

                <EditText
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="564dp"
                    style="@style/editTextClassic"
                    android:layout_marginTop="5dp"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:background="@drawable/edittextstyle"
                    android:id="@+id/stovemaxStrength"
                    android:gravity="right"
                    android:hint="3.5"
                    android:textColorHint="@color/abc_primary_text_material_light"
                    android:inputType="number" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="43dp"
                    android:text="Select type of notification you want to get"
                    android:textSize="20dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="367dp"
                    android:text="Text"
                    android:textSize="20dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    />


                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_checkbox"
                    android:textColor="@color/bright_foreground_inverse_material_dark"
                    android:onClick="textNotification"
                    android:layout_marginTop="2dp"
                    android:checked="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="38dp"
                    android:text="Icon"
                    android:textSize="20dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    />
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/icon_checkbox"
                    android:textColor="@color/bright_foreground_inverse_material_dark"
                    android:onClick="iconNotification"
                    android:layout_marginTop="2dp"
                    android:checked="true" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="15dp">

                <Button
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/applyChanges"
                    android:layout_marginLeft="780dp"
                    android:background="@drawable/layout_bg_button"
                    android:text="Apply Changes"
                    android:allowUndo="false"
                    android:onClick="setProperties"
                    android:textColor="#000000" />


            </LinearLayout>

        </LinearLayout>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginLeft="648dp"
    android:weightSum="1">


    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textColor="@color/bright_foreground_inverse_material_dark"
        android:onClick="clearSensors"
        android:text="Default Settings"
        android:layout_marginLeft="200dp"
        android:background="@drawable/layout_bg_button"
        android:layout_marginTop="20dp"
        android:layout_weight="0.32" />

</LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="80dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="83dp"
                android:layout_marginLeft="180dp"
                android:id="@+id/MotionButton"
                android:background="@drawable/motion_image"
                android:nestedScrollingEnabled="true"
                android:onClick="startMotionSensorScan"
                android:layout_gravity="center_horizontal" />

            <Button
                android:layout_width="90dp"
                android:layout_height="83dp"
                android:layout_marginLeft="170dp"
                android:id="@+id/OpenCloseButton"
                android:background="@drawable/openclose"
                android:nestedScrollingEnabled="true"
                android:onClick="startOpenCloseScan" />

            <Button
                android:layout_width="90dp"
                android:layout_height="83dp"
                android:layout_marginLeft="160dp"
                android:id="@+id/SmartPlug"
                android:background="@drawable/smartplug"
                android:nestedScrollingEnabled="true"
                android:onClick="startSmartPlugScan" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Motion Sensor"
          android:layout_marginLeft="175dp"
          android:textSize="20dp"
          android:textStyle="bold"
          android:textColor="@color/bright_foreground_material_light" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Sensor"
            android:layout_marginLeft="120dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/bright_foreground_inverse_material_dark" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Smart Plug"
            android:layout_marginLeft="130dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/bright_foreground_inverse_material_dark" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(Refrigerator)"
            android:textStyle="bold"
            android:textColor="@color/bright_foreground_inverse_material_dark"
            android:layout_marginLeft="450dp" />

    </LinearLayout>

</LinearLayout>
